<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Label">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">20sp</item>
  </style>
  <style name="Value">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">50sp</item>
  </style>
  <style name="Pick">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="Pick.Plus">
    <item name="android:src">@drawable/plus</item>
  </style>
  <style name="Pick.Minus">
    <item name="android:src">@drawable/minus</item>
  </style>
  <style name="Vibes">
    <item name="android:src">@drawable/vibes</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="Control">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">30sp</item>
  </style>
  <style name="Info">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="Info.Title">
    <item name="android:textSize">25sp</item>
    <item name="android:layout_margin">10dp</item>
  </style>
  <style name="Info.About">
    <item name="android:textSize">20sp</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>
  <style name="Info.Legal">
    <item name="android:textSize">10sp</item>
  </style>
  <style name="Close">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">15sp</item>
    <item name="android:layout_marginTop">15dp</item>
  </style>
</resources>

