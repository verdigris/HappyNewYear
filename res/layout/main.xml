<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
  <LinearLayout android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
      <TextView android:text="@string/lbl_voices_happy" style="@style/wrap" />
      <NumberPicker android:id="@+id/np_voices_happy"
                    style="@style/wrap" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
      <TextView android:text="@string/lbl_voices_new" style="@style/wrap" />
      <NumberPicker android:id="@+id/np_voices_new"
                    style="@style/wrap" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
      <TextView android:text="@string/lbl_voices_year" style="@style/wrap" />
      <NumberPicker android:id="@+id/np_voices_year"
                    style="@style/wrap" />
    </LinearLayout>
  </LinearLayout>

  <Button android:id="@+id/btn_snd_happy" style="@style/ActionButton"
          android:text="@string/btn_snd_happy" />
</LinearLayout>
